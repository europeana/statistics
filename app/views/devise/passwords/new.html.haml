= content_for :title do
  Forgot your password?

.row
  .col-sm-12
    %div
      .well
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
          %legend
            %h4 Forgot your password?
            - error_class_name = ""
            - if @user.errors[:email][0]
              - error_class_name = "has-error"
            .form-group{class: "#{error_class_name}"}
              = f.label :email, class: "col-sm-1 control-label"
              .col-lg-3
                .input-group
                  %span.input-group-addon= "<span class='glyphicon glyphicon-envelope'></span>".html_safe
                  = f.text_field :email, :required => false, class: "form-control"
                  - if !error_class_name.blank?
                    %span.label.label-danger
                      = @user.errors[:email][0]
            .form-group
              .col-lg-3= f.submit "Send me reset password instructions", class: "btn btn-success"
            %br
            %small= render "devise/shared/links"