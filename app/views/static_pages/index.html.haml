- if signed_in?
  = render partial: "users/dashboard"
- else
  = content_for :title do 
    = link_to "Statistics", root_url
  = content_for :page_title do
    Statistics
  .row.jumbotron
    .col-sm-9
      %h1 Statistics
      %p German Project
    .col-sm-3
      = form_for(@user, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
        .form-group
          .col-lg-12= f.text_field :username, class: "form-control",  placeholder: "Pick a username", autocomplete: :off
        .form-group
          .col-lg-12
            .input-group
              = f.text_field :email, class: "form-control",  placeholder: "Your email", autocomplete: :off
        .form-group
          .col-lg-12
            .input-group
              = f.password_field :password, class: "form-control",  placeholder: "Create a password", autocomplete: :off
        .form-group
          .col-lg-3= f.submit "Sign Up", class: "btn btn-success"